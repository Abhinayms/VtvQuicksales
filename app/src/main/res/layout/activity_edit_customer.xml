        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cname"
            android:hint="Customer Name"
            android:inputType="text"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_weight="1"
            />
            <ImageButton
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel_edit"
                android:layout_weight="8"
                android:id="@+id/cbname"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cnum"
            android:hint="Mobile Number"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:maxLength="10"

            />
        <ImageButton
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_edit"
            android:layout_weight="8"
            android:id="@+id/cbnum"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profession"
            android:textSize="15dp"
            android:inputType="text"
            android:layout_weight="1"
            android:textColor="#000000"
            android:id="@+id/cpro"
            />
        <ImageButton
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_edit"
        android:layout_weight="8"
            android:id="@+id/cbpro"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textSize="15dp"
            android:inputType="text"
           android:layout_weight="1"
            android:textColor="#000000"
            android:id="@+id/cgen"
            />
        <ImageButton
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_edit"
            android:layout_weight="8"
            android:id="@+id/cbgen"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/compName"
            android:hint="Company"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textColor="#000000"

            />
        <ImageButton
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_edit"
            android:layout_weight="8"
            android:id="@+id/cbcpmny"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cln"
            android:hint="Landline Number"
            android:inputType="number"
            android:textSize="15dp"
           android:layout_weight="1"
            android:textColor="#000000"

            />
        <ImageButton
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_edit"
            android:layout_weight="8"
            android:id="@+id/cbln"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:id="@+id/cadd"
            />
        <ImageButton
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_edit"
            android:layout_weight="8"
            android:id="@+id/cbadd"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:layout_weight="1"
            android:textColor="#000000"
            android:id="@+id/cmail"

            />
        <ImageButton
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_edit"
            android:layout_weight="8"
            android:id="@+id/cbmail"
            />
    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="Update"
            android:onClick="update"
            android:id="@+id/update_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape"
            />

    </LinearLayout>
</ScrollView>