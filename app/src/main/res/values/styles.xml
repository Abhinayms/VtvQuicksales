<resources>

    <style name="MyMaterialTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:actionMenuTextColor">@color/actionMenuTextColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColor">@color/my_spinner_text_color</item>
        <item name="android:windowSoftInputMode">stateHidden</item>

        <!--<item name="homeAsUpIndicator">@drawable/ic_action_back</item>-->

        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>

    </style>



    <style name="myUpArrowStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@color/my_up_arrow</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="_Credential" parent="Theme.AppCompat.Light.DarkActionBar">
        ...
        <item name="android:editTextColor">#000000</item> <!--Allow to change the editText color-->
        ...
    </style>

    <style name="buttonstyle">
    <item name="android:colorButtonNormal">#2196f3</item>
        </style>

    <style name="spinner_style" parent="@android:style/Theme.Holo.Light">

        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">2dp</item>

        <item name="android:background">@drawable/sample_bg</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>


